<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/avatar_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar_popup"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/avatar_popup"
        android:text="TextView" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/following"
        android:layout_below="@+id/following"
        android:text="TextView" />

    <Button
        android:id="@+id/viewTweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followers"
        android:layout_marginRight="22dp"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/followers"
        android:text="Button" />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/viewTweets"
        android:layout_alignBottom="@+id/viewTweets"
        android:layout_alignLeft="@+id/followers"
        android:text="Button" />

</RelativeLayout>